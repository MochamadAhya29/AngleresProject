<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:layout_margin="5dp"
            android:orientation="horizontal">
<!--            <VideoView-->
<!--                android:layout_width="90dp"-->
<!--                android:layout_height="90dp"-->
<!--                android:id="@+id/post_video"-->
<!--                android:src="@drawable/ic_launcher_background"-->
<!--                android:scaleType="centerCrop"/>-->
            <ImageView
                android:id="@+id/post_image"
                android:layout_width="90dp"
                android:layout_height="90dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_judul_post"
                    android:textSize="16sp"
                    android:text="nfdsnfs"
                    android:textStyle="bold"
                    android:layout_marginLeft="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_description"
                    android:layout_marginLeft="6dp"
                    android:text="fkjsksjfkldsjfjfgsdgdfsdfasf"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_publisher"
                    android:layout_marginStart="10dp"
                    android:textSize="12sp"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="7dp">

            <ImageView
                android:id="@+id/post_image_like"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_like"/>

            <ImageView
                android:id="@+id/post_image_comment"
                android:layout_width="20dp"
                android:layout_marginLeft="5dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_toEndOf="@id/post_image_like"
                android:src="@drawable/ic_chat"/>

            <ImageView
                android:id="@+id/post_image_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_sharing"/>




        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_like"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_comments"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:text=""
            android:textSize="13sp"
            android:layout_marginBottom="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>



</RelativeLayout>